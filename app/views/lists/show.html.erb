<%= render "shared/navbar" %>
<%= render "shared/list_banner" %>

<div class="cards-wrapper">
  <div class="d-flex justify-content-end">
     <%= link_to "Add new bookmark", new_list_bookmark_path(@list), class: "btn btn-success float-right" %>
  </div>

  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <%= image_tag bookmark.movie.poster_url%>
        <div class="card-trip-infos">
          <div>
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.overview %></p>
          </div>
          <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
