<%= render "shared/navbar" %>
<%= render "shared/banner" %>


<div class="container">
  <div class="d-flex justify-content-between">
    <h3>My Lists</h3>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-success"%>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
        <div class="card-category"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= link_to list.name, list_path(list), :class => "btn btn-inverse btn-secondary" %>
        </div>
    <% end %>
  </div>
</div>
